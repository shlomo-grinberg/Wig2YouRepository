<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.editWig.editWig_Fragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EA947E"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EA947E">

        <Button
            android:id="@+id/editWig_btn_deleteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="36dp"
            android:background="#FFFFFF"
            android:text="DELETE"
            android:textSize="21sp"
            app:backgroundTint="#DC6969"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editWig_btn_saveBtn"
            app:layout_constraintStart_toEndOf="@+id/editWig_btn_saveBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_et_kosher" />

        <TextView
            android:id="@+id/editWig_tv_howToUse"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:text="How to use"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_et_purchaseDate" />

        <EditText
            android:id="@+id/editWig_et_howToUse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_howToUse"
            app:layout_constraintEnd_toEndOf="@+id/editWig_et_purchaseDate"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_howToUse"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_howToUse" />

        <EditText
            android:id="@+id/editWig_et_kosher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_kosher"
            app:layout_constraintEnd_toEndOf="@+id/editWig_et_howToUse"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_kosher"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_kosher" />

        <TextView
            android:id="@+id/editWig_tv_kosher"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Kosher"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_et_howToUse" />

        <TextView
            android:id="@+id/editWig_tv_style"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Style"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_et_length" />

        <EditText
            android:id="@+id/editWig_et_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_style"
            app:layout_constraintEnd_toEndOf="@+id/editWig_et_length"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_style"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_style" />

        <TextView
            android:id="@+id/editWig_tv_variety"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Variety"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_et_price" />

        <TextView
            android:id="@+id/editWig_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="28dp"
            android:text="Price:"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_imgView_wig_image" />

        <EditText
            android:id="@+id/editWig_et_variety"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_variety"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_variety"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_variety" />

        <EditText
            android:id="@+id/editWig_et_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="90dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_price"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_price" />

        <TextView
            android:id="@+id/editWig_tv_length"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Length"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_et_variety" />

        <EditText
            android:id="@+id/editWig_et_length"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_length"
            app:layout_constraintEnd_toEndOf="@+id/editWig_et_variety"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_length"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_length" />

        <Button
            android:id="@+id/editWig_btn_saveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="36dp"
            android:background="#FFFFFF"
            android:text="Save"
            android:textSize="21sp"
            app:backgroundTint="#DC6969"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_btn_deleteBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editWig_btn_deleteBtn"
            app:layout_constraintTop_toTopOf="@+id/editWig_btn_deleteBtn"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/editWig_et_purchaseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="date"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_purchaseDate"
            app:layout_constraintEnd_toEndOf="@+id/editWig_et_maker"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_purchaseDate"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_purchaseDate" />

        <TextView
            android:id="@+id/editWig_tv_maker"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Maker"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_et_style" />

        <TextView
            android:id="@+id/editWig_tv_purchaseDate"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Purchase Date"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editWig_et_maker" />

        <EditText
            android:id="@+id/editWig_et_maker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_maker"
            app:layout_constraintEnd_toEndOf="@+id/editWig_et_style"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_maker"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_maker" />

        <ImageView
            android:id="@+id/editWig_imgView_wig_image"
            android:layout_width="167dp"
            android:layout_height="152dp"
            android:layout_marginStart="122dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="122dp"
            android:src="@drawable/avatar_woman"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editWig_et_tv_purchaseDate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/editWig_tv_purchaseDate"
            app:layout_constraintEnd_toEndOf="@+id/editWig_et_maker"
            app:layout_constraintStart_toEndOf="@+id/editWig_tv_purchaseDate"
            app:layout_constraintTop_toTopOf="@+id/editWig_tv_purchaseDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>